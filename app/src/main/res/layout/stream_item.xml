<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/offer_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/ocean_world"
            android:paddingTop="4dp"
            android:background="#FAFAFA"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="#F5F5F5">
            <LinearLayout
                android:paddingLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/offer_title"
                    android:textColor="#000000"
                    android:text="This is a Placeholder Title for an Item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/offer_likesNumber"
                    android:text="Fulanito + 3.8k (Like this)"
                    android:textColor="#9E9E9E"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/left_side_card_btns"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:text="Like"
                        android:id="@+id/likeButton"
                        android:elevation="2dp"
                        android:backgroundTint="#E53935"
                        android:src="@mipmap/ic_favorite_white_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/right_side_card_btns"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@id/left_side_card_btns"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:text="$"
                        android:id="@+id/offer_price"
                        android:backgroundTint="#4CAF50"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>